server {
    listen 80;
    server_name www.gorkyliquid.ru gorkyliquid.ru;
    return 301 https://gorkyliquid.ru$request_uri;
}

server {
    listen 443 ssl http2;
    server_name www.gorkyliquid.ru;

    ssl_certificate ssl/gorkyliquid_front.cert;
    ssl_certificate_key ssl/gorkyliquid_front.key;
    return 301 https://gorkyliquid.ru$request_uri;
}

server {
    listen 443 ssl http2;
    server_name gorkyliquid.ru;

    ssl_certificate ssl/gorkyliquid_front.cert;
    ssl_certificate_key ssl/gorkyliquid_front.key;
    ssl_protocols TLSv1.2 TLSv1.3;

    root /var/www/gorkyliquid/dist;
    index index.html;

    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }

    location / {
        try_files $uri $uri/ /index.html;
    }
}
